<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.keephealthy02.Mapper.UserdietMapper">

    <resultMap id="BaseResultMap" type="org.example.keephealthy02.Entity.Userdiet">
        <id column="userid" jdbcType="VARCHAR" property="userid"/>
        <result column="date" jdbcType="DATE" property="date"/>
        <result column="consumecalories" jdbcType="FLOAT" property="consumecalories"/>
        <result column="foods" jdbcType="VARCHAR" property="foods"/>
    </resultMap>
    <insert id="insert" parameterType="org.example.keephealthy02.Entity.Userdiet">
        INSERT INTO userdiet (userid, date, consumecalories, foods)
        VALUES (#{userid}, #{date}, #{consumecalories}, #{foods})
    </insert>

    <insert id="insertSelective" parameterType="org.example.keephealthy02.Entity.Userdiet">
        INSERT INTO userdiet
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userid != null">userid,</if>
            <if test="date != null">date,</if>
            <if test="consumecalories != null">consumecalories,</if>
            <if test="foods != null">foods,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="userid != null">#{userid},</if>
            <if test="date != null">#{date},</if>
            <if test="consumecalories != null">#{consumecalories},</if>
            <if test="foods != null">#{foods},</if>
        </trim>
    </insert>

    <select id="selectByPrimaryKey" parameterType="map" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM userdiet
        WHERE userid = #{userid} AND date = #{date}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM userdiet
    </select>

    <update id="updateByPrimaryKeySelective" parameterType="org.example.keephealthy02.Entity.Userdiet">
        UPDATE userdiet
        <set>
            <if test="consumecalories != null">consumecalories = #{consumecalories},</if>
            <if test="foods != null">foods = #{foods},</if>
        </set>
        WHERE userid = #{userid} AND date = #{date}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="map">
        DELETE FROM userdiet
        WHERE userid = #{userid} AND date = #{date}
    </delete>

</mapper>
