<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.keephealthy02.Mapper.FoodMapper">

    <resultMap id="BaseResultMap" type="org.example.keephealthy02.Entity.Food">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="calories" jdbcType="FLOAT" property="calories"/>
    </resultMap>


    <insert id="insert" parameterType="org.example.keephealthy02.Entity.Food">
        INSERT INTO food (id, name, calories)
        VALUES (#{id}, #{name}, #{calories})
    </insert>

    <insert id="insertSelective" parameterType="org.example.keephealthy02.Entity.Food">
        INSERT INTO food
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="calories != null">calories,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="calories != null">#{calories},</if>
        </trim>
    </insert>

    <select id="selectFoodById" parameterType="String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM food
        WHERE id = #{id}
    </select>

    <select id="selectAllFoods" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM food
    </select>

    <update id="updateFood" parameterType="org.example.keephealthy02.Entity.Food">
        UPDATE food
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="calories != null">calories = #{calories},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteFoodById" parameterType="String">
        DELETE FROM food WHERE id = #{id}
    </delete>

</mapper>
